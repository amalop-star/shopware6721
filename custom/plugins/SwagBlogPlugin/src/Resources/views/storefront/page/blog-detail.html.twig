{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
    <div class="container blog-detail-page py-5">
        <h1 class="mb-3">{{ blog.title }}</h1>

        {% if blog.mainImage %}
            <img src="{{ blog.mainImage.url }}" alt="{{ blog.title }}" class="mb-4 w-100 rounded shadow">
        {% endif %}

        <p class="text-muted mb-2">
            By {{ blog.author }} 
            {% if blog.publishedAt %} 
                | {{ blog.publishedAt|date('d M Y') }} 
            {% endif %}
        </p>

        <div class="blog-description mb-5">
            {{ blog.description|raw }}
        </div>

        {% if blog.category %}
            <p><strong>Category:</strong> {{ blog.category.name }}</p>
        {% endif %}
    </div>
{% endblock %}
