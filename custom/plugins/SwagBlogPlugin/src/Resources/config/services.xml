<?xml version="1.0"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="SwagBlogPlugin\Core\Content\Blog\BlogDefinition" public="true">
            <tag name="shopware.entity.definition" entity="swag_blog" />
        </service>

        <service id="SwagBlogPlugin\Core\Content\BlogCategory\BlogCategoryDefinition">
            <tag name="shopware.entity.definition" entity="swag_blog_category" />
        </service>
        <service id="SwagBlogPlugin\Core\Content\BlogMedia\BlogMediaDefinition">
            <tag name="shopware.entity.definition" entity="swag_blog_media" />
        </service>
        <service id="SwagBlogPlugin\Core\Content\Cms\DataResolver\BlogListingCmsElementResolver">
            <argument type="service" id="swag_blog.repository"/>
            <tag name="shopware.cms.data_resolver"/>
        </service>
    </services>
</container>